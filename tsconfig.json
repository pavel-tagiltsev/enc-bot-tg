{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "server/**/*.js",
    "server/**/*.ts",
    "server.js",
    "server.ts"
  ],
  "exclude": [
    "node_modules",
    ".gemini"
  ]
}